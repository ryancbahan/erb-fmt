      <div class="dashboard"> 
<% @projects.each do |project| %>
    <div class="project">   
    <h2> <%= project.name %> </h2>     
  <ul> 
        <% project.tasks.each do |task| %>
      <li class="<%= task.completed? ? 'done' : 'pending' %>">   <span>  <%= task.title %>  </span> 
        <% if task.notes.present? %>



        <p class="notes"> <%= task.notes %> </p>     
        <% end %>
    </li>    
      <% end %>
        </ul>  
  </div> 
<% end %>
</div>
